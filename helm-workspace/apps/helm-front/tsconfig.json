{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "types": ["node"],
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@helm-front/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.html", "src/**/*.css"],
  "exclude": ["node_modules", "dist"]
}