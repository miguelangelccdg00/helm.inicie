{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc",
    "rootDir": "./",
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["libs/shared/src/*"]
    }
  },
  "include": ["apps/**/*", "libs/**/*"],
  "exclude": ["node_modules", "tmp"]
}